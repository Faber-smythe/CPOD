{% extends 'base.html.twig' %}


{% block head %}

        {% block stylesheets %}
            <style>
                main {
                    position: relative;
                    z-index: 2;
                    margin: 25px;
                    margin-top: 350px;
                    padding: 30px;
                    background: #fff;
                    color: #010000;
                    font-family: 'Roboto', 'sans-serif';
                    font-size: 1.1em;
                    line-height: 1.2;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                }
                h2 {
                    padding: 20px;
                    font-family: 'Roboto', 'sans-serif';
                    font-weight: 200;
                    text-transform: uppercase;
                    text-align: center;
                    font-size: 2.3em;
                }
                p {
                    max-width: 90%;
                }
            </style>
        {% endblock %}

{% endblock %}

{% block title %}Journal{% endblock %}
{% block page_title %} Journal {% endblock %}

{% block body %}


    <main>

        <h2> {{ log.title }} </h2>

            <pre>
            {{ log.content }}
            </pre>

            <pre>
            {{ log.content2 }}
            </pre>
    </main>

{% endblock %}


{% block javascripts %}
    <script src="{{ asset('JS/journal.js')}}"></script>
{% endblock %}
